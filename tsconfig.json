{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declarationDir": "./dist/types",
    "allowJs": true
  },
  "include": [
    "lib",
    "lib/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
} 